<div class="log-in">
  <section class="login-block">
    <div class="container">
    	<div class="row">
    	  <div class="col-md-4 login-sec">
    		  <h2 class="text-center">Registration</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form'}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :email, for: "exampleInputEmail1", class: "text-uppercase"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder:"" %>
            </div>
            <div class="form-group">
              <%= f.label :password, for: "exampleInputPassword1", class: "text-uppercase"%>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control",  placeholder: "" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, for: "confirmPassword", class: "text-uppercase" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",  placeholder: "" %>
            </div>

            <div class="form-check">
              <label class="form-check-label">
                <input type="checkbox" class="form-check-input">
                <small>Remember Me</small>
              </label>
              <button type="submit" class="btn btn-login float-right">Submit</button>
            </div>
          <% end %>
          <div class="btn btn-login float-center">
            <%= render "users/shared/links" %>
          </div>
    	  </div>

      	<div class="col-md-8 banner-sec">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <%= image_tag("login-bg", class: 'd-block img-fluid')%>
                </div>
            </div>
    	    </div>
        </div>
      </div>
    </div>

  </section>
</div>
